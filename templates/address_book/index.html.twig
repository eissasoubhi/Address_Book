{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <h1 >All addresse books</h1>
        <a href="{{ path('create_address') }}" class="btn btn-success mb-4 float-right">Add new address</a>

        <table class="table table-striped table-bordered" >
            <thead>
            <tr>
                <th >Picture</th>
                <th >Firstname</th>
                <th >Lastname</th>
                <th >Street & NÂ°.</th>
                <th >Zip</th>
                <th >City</th>
                <th >Country</th>
                <th >Phonenumber</th>
                <th >Birthday</th>
                <th >Email</th>
                <th >Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for address in addresses %}
            <tr>
                <td>
                    {% if address.picture != '' %}
                    <img src="{{ asset('pictures/' ~ address.picture) }}" class="img-fluid">
                    {% else %}
                        <img src="{{ asset('pictures/dummy.jpg') }}" class="img-fluid">
                    {% endif %}
                </td>
                <td >
                    <a class="btn btn-primary" href="/edit/{{ address.id }}"><i class="fa fa-edit"></i></a>
                    <a class="btn btn-danger" href="/delete/{{ address.id }}"><i class="fa fa-remove"></i></a>
                </td>
                <td>{{ address.firstName }}</td>
                <td>{{ address.lastName }}</td>
                <td>{{ address.streetNumber }}</td>
                <td>{{ address.zip }}</td>
                <td>{{ address.city }}</td>
                <td>{{ address.country }}</td>
                <td>{{ address.phoneNumber }}</td>
                <td>{{ address.birthDay }}</td>
                <td>{{ address.email }}</td>
            </tr>
            {% endfor %}
            </tbody>
        </table>
        <div >
            {{ knp_pagination_render(addresses) }}
        </div>
    </div>
{% endblock %}

