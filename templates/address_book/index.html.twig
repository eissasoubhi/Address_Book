{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <h1 >All addresse books</h1>
        <a href="{{ path('create_address') }}" class="btn btn-success mb-4 float-right">Add new address</a>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success" style="margin-top: 60px;" role="alert">
                {{ message }}
            </div>
        {% endfor %}

        <table class="table table-striped table-bordered" >
            <thead>
            <tr>
                <th >Picture</th>
                <th >Firstname</th>
                <th >Lastname</th>
                <th >Street & NÂ°.</th>
                <th >Zip</th>
                <th >City</th>
                <th >Country</th>
                <th >Phonenumber</th>
                <th >Birthday</th>
                <th >Email</th>
                <th >Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for address in addresses %}
            <tr>
                <td>
                    {% if address.picture != '' %}
                    <img src="{{ asset('pictures/' ~ address.picture) }}" class="img-fluid">
                    {% else %}
                        <img src="{{ 'https://ui-avatars.com/api/?background=343a40&color=fff&name=' ~ address.firstname ~ '+' ~ address.lastname }}" >
                    {% endif %}
                </td>
                <td>{{ address.firstname }}</td>
                <td>{{ address.lastname }}</td>
                <td>{{ address.streetnumber }}</td>
                <td>{{ address.zip }}</td>
                <td>{{ address.city }}</td>
                <td>{{ address.country }}</td>
                <td>{{ address.phonenumber }}</td>
                <td>{{ address.birthday }}</td>
                <td>{{ address.email }}</td>
                <td class="address_actions">
                    <a class="btn btn-primary" href="/edit/{{ address.id }}"><i class="fa fa-edit"></i></a>
                    {{ form_start(delete_address_form, {action: path('delete_address', {id: address.id })}) }}
                        {{ form_widget(delete_address_form.id) }}
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash-alt"></i>
                        </button>
                        {{ form_rest(delete_address_form) }}
                    {{ form_end(delete_address_form) }}
                </td>
            </tr>
            {% endfor %}
            </tbody>
        </table>
        <div >
            {{ knp_pagination_render(addresses) }}
        </div>
    </div>
{% endblock %}

{% block css %}
    {{ parent() }}
    <style>
        .address_actions form{
            display: inline-block;
        }
        .address_actions a, .address_actions button{
            padding: 7px;
            font-size: 10px;
        }
    </style>
{% endblock %}
